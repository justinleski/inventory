<html>
    <head>
        <title>New Item</title>
    </head>

  <body>
    <div>
        <h2>Create a new item:</h2>

        <form method="post" action="/new" style="display: flex; flex-direction: column; ">

            <label for="tea_name">Tea Name:</label>
            <input type="text" id="tea_name" name="tea_name" required />

            <label for="decaf">Decaf:</label>
            <select id="decaf" name="decaf">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" min="0" required />

            <label for="type_id">Tea Type:</label>
            <select id="type_id" name="type_id" required>
                <!-- These should be populated dynamically from your database -->
                <% teaTypeOptions.forEach(tea => { %>
                    <option value="<%= tea.id %>" >
                        <%= tea.name %>
                    </option>
                <% }); %>
            </select>

            <label for="country_id">Country of Origin:</label>
            <select id="country_id" name="country_id" required>
                <!-- These should also be populated dynamically -->
                <% countryOptions.forEach(country => { %>
                    <option value="<%= country.id %>">
                        <%= country.country_name %>
                    </option>
                <% }); %>
            </select>

            <button type="submit">Add Tea</button>

        </form>

    </div>

    
  
  </body>
</html>